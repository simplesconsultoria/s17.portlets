<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="s17.portlets"
      tal:omit-tag=""
      tal:define="anonymous view/is_anonymous;">
<dl class="portlet portletPersonProfile"
    tal:condition="not:anonymous">

    <dt tal:content="view/data/title"
        i18n:translate="">Personal profile</dt>
    <dd>
        <div id="personal-profile">

            <div class="portrait">
	            <img tal:replace="structure view/get_portrait" src="defaultUser.png" />
	        </div>

	        <ul class="profile-options">
	            <li><a class="profile" href=""
	                   tal:attributes="href view/get_user_profile"
	                   i18n:translate="">My Profile</a></li>
	        </ul>

	       <dl class="portlet">
	               <dt class="portletHeader">
                        <span class="portletTopLeft"></span>
                            <span i18n:translate="">Latest Posts</span>
                        <span class="portletTopRight"></span>
                    </dt>

                <tal:participation tal:define="participation_list view/get_participation">
                    <dd tal:condition="not: participation_list"
                        i18n:translate="">No posts created</dd>
                    <dd class="portletItem odd" tal:condition="participation_list"
                        tal:repeat="activity participation_list">
                        <tal:block tal:define="activity_obj activity/getObject">
                        <a title="" class="tile"
                           tal:attributes="href activity_obj/absolute_url">
                           <span class="portletItemDetails" tal:content="python:view.data_transform(activity_obj.Date())"></span>
                           <span tal:replace="activity/Title" />

                        </a>
                       </tal:block>
                    </dd>
                </tal:participation>

	        </dl>
        </div>
    </dd>
</dl>
</html>
