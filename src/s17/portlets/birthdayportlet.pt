<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="s17.portlets"
      tal:omit-tag=""
      tal:define="anonymous view/is_anonymous;">

<dl class="portlet portletBirthdayPortlet" tal:condition="view/available">
    <dt class="portletHeader">
        <span class="portletTopLeft"></span>
        <span tal:content="view/data/title"></span>
        <span class="portletTopRight"></span>
    </dt>
    <tal:birthdays
        define="birthdays view/get_birthdays"
        repeat="birthday birthdays">
        <dd class="portletItem" tal:condition="birthday">
            <div class="bdate" tal:content="birthday">31/12</div>
            <div tal:define="persons python:birthdays[birthday]"
                tal:repeat="person persons">
                <tal:object
                    define="birthday_obj python:person[1].getObject();
                            picture nocall:birthday_obj/picture">
                    <img class="image-left"
                        tal:condition="nocall:picture" width="40"
                        tal:attributes="src string:${birthday_obj/absolute_url}/@@images/picture/thumb" />
                    <img class="image-left" src="defaultUser.png" width="32"
                        tal:condition="not:nocall:picture" />
                    <a tal:attributes="href birthday_obj/absolute_url"
                        tal:content="birthday_obj/Title">Full name</a>
                    <div class="visualClear"><!-- --></div>
                </tal:object>
            </div>
        </dd>
    </tal:birthdays>
</dl>

</html>
