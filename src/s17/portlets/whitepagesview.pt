<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      i18n:domain="s17.portlets">
<body>
    <div class="people-results" tal:define="people view/people_list">
        <tal:block tal:repeat="person people">
            <div>
                <div>
                    <h3><a tal:attributes="href person/getURL" tal:content="person/fullname"></a></h3>
                    <tal:email tal:condition="python:hasattr(person, 'email')">
                        <a tal:attributes="href python:'mailto:' + person.email" tal:content="person/email"></a>
                    </tal:email>
                    <!--<span>Extension: </span><span tal:content="person/extension"></span></br>-->
                </div>
            </div>
        </tal:block>
        <h2 tal:condition="not:people">No items found.</h2>
    </div>
</body>
</html>
