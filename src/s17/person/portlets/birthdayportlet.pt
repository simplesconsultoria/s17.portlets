<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="s17.person.portlets"
      tal:omit-tag=""
      tal:define="anonymous view/is_anonymous;">

<dl class="portlet portletBirthdayPortlet" tal:condition="view/available">
    <dt class="portletHeader">
        <span class="portletTopLeft"></span>
        <span tal:content="view/data/title"></span>
        <span class="portletTopRight"></span>
    </dt>
    <tal:birthdays tal:repeat="birthday view/get_birthdays">
    <dd class="portletItem" tal:condition="birthday">
        <tal:object tal:define="birthday_obj birthday/getObject">
        <span class="bdate"
            tal:content="python:view.format_date(birthday_obj.birthday)">31/12</span>
        <a tal:attributes="href birthday_obj/absolute_url">
            <span class="bname" tal:content="birthday_obj/Title"></span></a>
        </tal:object>
    </dd>
    </tal:birthdays>
</dl>

</html>
