<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="s17.person.portlets"
      tal:omit-tag="">
<dl class="portlet portletBirthdayPortlet">

    <dt class="portletHeader">
        <span class="portletTopLeft"></span>
        <span tal:content="view/data/title"></span>
        <span class="portletTopRight"></span>
    </dt>

    <tal:birthdays tal:repeat="birthday view/get_birthdays">
    <dd class="portletItem" tal:condition="birthday">
        <tal:object tal:define="birthday_obj birthday/getObject">
        <span class="bdate" tal:content="python:birthday_obj.birthday.strftime('%m/%d')">31/12</span>
        <a href="#" tal:attributes="href birthday_obj/absolute_url">
            <span class="bname" tal:content="birthday_obj/Title">John Doe</span></a>
        </tal:object>
    </dd>
    </tal:birthdays>

</dl>
</html>
