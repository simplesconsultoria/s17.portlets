<dl class="portlet portletBirthdayPortlet"
    i18n:domain="s17.portlets.birthday">

    <dt class="portletHeader">
        <span class="portletTopLeft"></span>
        <span tal:content="view/data/title"></span>
        <span class="portletTopRight"></span>
    </dt>

    <tal:birthdays tal:repeat="birthday view/get_birthdays">
    <dd class="portletItem" tal:condition="birthday">
        <tal:object tal:define="birthday_obj birthday/getObject">
        <span class="bdate" tal:content="python:birthday_obj.birthday.strftime('%d/%m')">31/12</span>
        <a href="#" tal:attributes="href birthday_obj/absolute_url"><span class="bname" tal:content="birthday_obj/Title">john doe</span></a>
        </tal:object>
    </dd>
    </tal:birthdays>

</dl>
