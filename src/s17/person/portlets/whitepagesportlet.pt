<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="s17.person.portlets"
      tal:omit-tag=""
      tal:define="anonymous view/is_anonymous"
      tal:condition="not:anonymous">

<script type="text/javascript">
    jq(document).ready(function() {
        jq('form[name=whitepages]').submit(function(event) {
            event.preventDefault;
            if ($('input[name=fullname]', this).attr('value').length === 0) {
                return false;
            };
            $.ajax({
                type: 'POST',
                url: portal_url + '/@@whitepages',
                data: $(this).serialize(),
                success: function(data) {
                    $('body').append('<div id="ajax-whitepage-res" />');
                    var results = $('#ajax-whitepage-res');
                    results.html(data);
                    var $data_res = $('#ajax-whitepage-res .people-results');
                    //results.prepOverlay({
                    //    subtype: 'ajax',
                    //    filter: '.people-results'
                    //});
                }
            });
            $('ajax-whitepage-res').empty();
            // return false;
        });
    });
</script>
<dl class="portlet portletWhitePagesPortlet">

    <dt class="portletHeader" tal:content="view/data/portlet_title"
        i18n:translate="">
        White Pages
    </dt>

    <dd class="portletItem odd">
        <form action="@@whitepages" id="searchpersonform" name="whitepages">
            <span tal:condition="view/data/description"
                  tal:content="view/data/description"> Description </span>
            <input type="text" name="fullname" />
            <input type="submit" value="Search" class="searchButton" i18n:attributes="value" />
        </form>
    </dd>

</dl>

</html>
